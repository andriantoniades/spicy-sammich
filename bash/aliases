# Aliases
### System
alias l.='ls -d .[^.]*'
alias l='ls -lhGt'
alias la='ls -AlGh'
alias lh='ls -lh'
alias ll='ls -lhG'
alias ls='ls -G'
alias hello='echo Hello Michael, the time is `date`'
alias hist='history'
alias k9='killall -9'
alias md='mkdir -p'
alias cdd='cd -'
alias cl='clear; l'
alias e='exit'
alias ta='tmux attach -t'
alias tl='tmux ls'
alias tc='tmux new -s'
alias tu='top -o cpu'
alias vim='mvim -v'

### Git
alias g='git status'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gco='git checkout'
alias gd='git diff'
alias gdm='git diff master'
alias gl='git log'
alias gp='git push'
alias gr='git remote -v'
alias gst='git status'
alias gt='git status'

### Heroku
alias h='heroku'
alias ha='heroku addons'
alias hconf='heroku config'
alias hlog='heroku logs -t'
alias hcon='heroku run console'
alias kensafuck='~/code/mmay/kensa/bin/kensa'

### Quick Movement
alias sumo='cd ~/code/fastly/cdn_sumo'
alias sierra='cd ~/code/fastly/Sierra'
alias ns='cd ~/code/fastly/Northstar'
alias mammoth='cd ~/code/fastly/mammoth'

### Application Shortcuts
alias be='bundle exec'
alias pg-stop='pg_ctl -D /usr/local/var/postgres stop -s -m fast'
alias pg='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias r='rake'
alias rc='rails c'
alias rs='rails s'
alias s='cd ..'
alias spec='rspec'

### Quick edit bash configs
alias ea='vim ~/.dotfiles/bash/aliases'
alias ee='vim ~/.dotfiles/bash/env'
alias eg='vim .git/cofig'
alias ua='alias > ~/.dotfiles/bash/aliases'
alias reload='source ~/.bashrc'
alias ra='. ~/.dotfiles/bash/aliases'

